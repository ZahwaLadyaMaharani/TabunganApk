<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#ffb6c1"/>
            <gradient android:angle="-90" android:endColor="#e0e0e0" android:startColor="#cd5c5c"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#ffc0cb"/>
            <solid android:color="#ffc0cb"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#ffb6c1"/>
            <gradient android:angle="-90" android:endColor="#f08080" android:startColor="#ffb6c1"/>
        </shape>
    </item>

</selector>